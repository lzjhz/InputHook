<Window x:Class="InputHook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputHook"
        mc:Ignorable="d"
        Title="InputFreeze" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Width="339" FontSize="16" Height="228">
    <Grid Margin="20,10,20,20">
        <Grid Margin="0">
            <CheckBox Content="Freeze keyboard" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="False" Name="freezeKeyboardCheckbox" VerticalContentAlignment="Center"/>
            <CheckBox Content="Freeze mouse" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Name="freezeMouseCheckbox" VerticalContentAlignment="Center"/>
            <Button Content="Apply" HorizontalAlignment="Left" VerticalAlignment="Top" Click="OnApply" Margin="0,64,0,0" Width="120" Height="30"/>
            <Button Content="Reset" HorizontalAlignment="Left" Margin="124,64,0,0" VerticalAlignment="Top" Click="OnReset" Width="120" Height="30"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="0,114,0,0" TextWrapping="Wrap" Text="Or press Ctrl+Alt+F to reset." VerticalAlignment="Top" FontSize="12" Foreground="#FF0024EC"/>
    </Grid>
</Window>
